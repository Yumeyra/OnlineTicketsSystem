@{
}
@model OnlineTicketsSystem.ViewModels.CartVm

<h1>Кошница</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

@if (!Model.Items.Any())
{
    <p>Кошницата е празна.</p>
    <a class="btn btn-primary" asp-controller="Events" asp-action="Index">Към събитията</a>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Събитие</th>
                <th>Цена</th>
                <th>Количество</th>
                <th>Общо</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>
                        @item.Title
                    </td>
                    <td>@item.Price.ToString("0.00") EUR</td>
                    <td>@item.Quantity</td>
                    <td>@item.LineTotal.ToString("0.00") EUR</td>
                    <td>
                        <form asp-action="Remove" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="eventId" value="@item.EventId" />
                            <button type="submit" class="btn btn-sm btn-danger">Премахни</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <strong>Общо билети:</strong> @Model.TotalQuantity <br />
        <strong>Обща сума:</strong> @Model.TotalPrice.ToString("0.00") EUR
    </div>

    <div class="mt-3 d-flex gap-2">
        <form asp-action="Clear" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-outline-secondary">Изчисти</button>
        </form>

        
        @* <form asp-controller="Cart" asp-action="Checkout" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-success">Плати (симулация)</button>
        </form> *@
        @if (User.Identity != null && User.Identity.IsAuthenticated)
        {
            <form asp-controller="Cart" asp-action="Checkout" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-success">Плати (симулация)</button>
            </form>
        }
        else
        {
            <div class="alert alert-warning mb-0">
                За да платиш, трябва да влезеш в профила си.
                <div class="mt-2">
                    <a class="btn btn-outline-primary btn-sm" asp-area="Identity" asp-page="/Account/Login">Вход</a>
                    <a class="btn btn-outline-secondary btn-sm" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
                </div>
            </div>
        }


    </div>
}
