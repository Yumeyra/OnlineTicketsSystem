@model List<OnlineTicketsSystem.Models.City>

<h2>Всички градове</h2>

<ul class="list-group">
    @foreach (var city in Model)
    {
        <li class="list-group-item">
            <a asp-controller="Cities"
               asp-action="ByCity"
               asp-route-slug="@city.Slug">
                @city.Name
            </a>
        </li>
    }
</ul>



