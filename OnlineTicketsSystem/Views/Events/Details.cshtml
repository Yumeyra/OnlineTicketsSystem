@* @model OnlineTicketsSystem.Models.Event *@
@model OnlineTicketsSystem.ViewModels.EventDetailsViewModel
@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

<h1>@Model.Event.Title</h1>

<p><strong>Категория:</strong> @Model.Event.Category.Name</p>
<p><strong>Град:</strong> @Model.Event.City</p>
<p><strong>Място:</strong> @Model.Event.Venue</p>
<p><strong>Дата:</strong> @Model.Event.Date.ToShortDateString()</p>
<p><strong>Капацитет:</strong> @Model.Event.Capacity</p>
<p><strong>Описание:</strong> @Model.Event.Description</p>

@if (!string.IsNullOrEmpty(Model.Event.ImageUrl))
{
    <img src="@Model.Event.ImageUrl" alt="@Model.Event.Title" width="300" />
}
<form asp-action="BuyTicket" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="id" value="@Model.Event.Id" />

    <label>Брой билети:</label>
    <input type="number" name="quantity" value="1" min="1" max="10" />

    <button type="submit" class="btn btn-primary">Купи билет</button>
    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        if (Model.IsSoldOut)
        {
            <button class="btn btn-secondary" disabled>Няма свободни места</button>
        }
        else
        {
            <form asp-action="BuyTicket" method="post" class="mt-2">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Event.Id" />

                <label>Брой билети:</label>
                <input type="number" name="quantity" value="1" min="1" max="10" />

                <button type="submit" class="btn btn-primary">Купи билет</button>
            </form>
        }
    }
    else
    {
        <div class="alert alert-warning mt-2">
            За да закупиш билет, трябва да влезеш или да се регистрираш.
            <div class="mt-2">
                <a class="btn btn-outline-primary btn-sm" asp-area="Identity" asp-page="/Account/Login">Вход</a>
                <a class="btn btn-outline-secondary btn-sm" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
            </div>
        </div>
    }

</form>

<a asp-action="Index">Обратно към списъка</a>

