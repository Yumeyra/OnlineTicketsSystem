<hr />
<h3>Отзиви</h3>

@if (Model.ReviewsCount == 0)
{
    <p>Все още няма отзиви.</p>
}
else
{
    <p>
        <strong>Средна оценка:</strong> @Model.AverageRating.ToString("0.0") / 5
        <span class="text-muted">(@Model.ReviewsCount отзива)</span>
    </p>

    <div class="list-group">
        @foreach (var r in Model.Reviews)
        {
            <div class="list-group-item">
                <div class="d-flex justify-content-between">
                    <strong>@(r.User?.UserName ?? "Потребител")</strong>
                    <span>⭐ @r.Rating / 5</span>
                </div>

                @if (!string.IsNullOrWhiteSpace(r.Comment))
                {
                    <div class="mt-1">@r.Comment</div>
                }

                <div class="text-muted mt-1" style="font-size: 0.9em;">
                    @r.CreatedAt.ToLocalTime().ToString("dd.MM.yyyy HH:mm")
                </div>
            </div>
        }
    </div>
}

<hr />
<h4>Остави отзив</h4>

@if (User.Identity != null && User.Identity.IsAuthenticated)
{
    if (!Model.CanReview)
    {
        <div class="alert alert-warning">
            Можеш да оставиш отзив само ако имаш <b>платен билет</b> за това събитие.
        </div>
    }
    else if (Model.UserHasReviewed)
    {
        <div class="alert alert-info">
            Вече си оставил/а отзив за това събитие.
        </div>
    }
    else
    {
        <form asp-controller="Reviews" asp-action="Create" method="post" class="mt-2">
            @Html.AntiForgeryToken()
            <input type="hidden" name="eventId" value="@Model.Event.Id" />

            <div class="mb-2">
                <label class="form-label">Оценка</label>
                <select name="rating" class="form-select" style="max-width:220px;">
                    <option value="5">5 - Отлично</option>
                    <option value="4">4</option>
                    <option value="3">3</option>
                    <option value="2">2</option>
                    <option value="1">1 - Слабо</option>
                </select>
            </div>

            <div class="mb-2">
                <label class="form-label">Коментар (по желание)</label>
                <textarea name="comment" class="form-control" rows="3" maxlength="1000"></textarea>
            </div>

            <button type="submit" class="btn btn-primary">Публикувай</button>
        </form>
    }
}
else
{
    <div class="alert alert-warning">
        За да оставиш отзив, трябва да влезеш в профила си.
        <div class="mt-2">
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary btn-sm">Вход</a>
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-secondary btn-sm">Регистрация</a>
        </div>
    </div>
}
