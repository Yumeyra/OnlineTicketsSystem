@* @model OnlineTicketsSystem.ViewModels.EventDetailsViewModel *@

@model OnlineTicketsSystem.ViewModels.EventDetailsViewModel
@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

<h1>@Model.Event.Title</h1>

<p><strong>Категория:</strong> @Model.Event.Category?.Name</p>
<p><strong>Град:</strong> @Model.Event.City</p>
<p><strong>Място:</strong> @Model.Event.Venue</p>
<p><strong>Дата:</strong> @Model.Event.Date.ToShortDateString()</p>
<p><strong>Капацитет:</strong> @Model.Event.Capacity</p>
<p><strong>Оставащи места:</strong> @Model.RemainingSeats</p>
<p><strong>Описание:</strong> @Model.Event.Description</p>
<p><strong>Цена:</strong> @Model.Event.Price.ToString("0.00") EUR</p>

@if (!string.IsNullOrWhiteSpace(Model.Event.ImageUrl))
{
    <img src="@Model.Event.ImageUrl" alt="@Model.Event.Title" class="event-img" />
}
else
{
    <img src="~/images/placeholder.jpg" alt="No image" class="event-img" />
}


@if (User.Identity != null && User.Identity.IsAuthenticated)
{
    if (Model.IsSoldOut)
    {
        <button class="btn btn-secondary mt-3" disabled>Няма свободни места</button>
    }
    else
    {
        <form asp-controller="Cart" asp-action="Add" method="post" class="mt-3">
            <input type="hidden" name="eventId" value="@Model.Event.Id" />

            <label for="qty">Количество:</label>
            <input id="qty" type="number" name="quantity" value="1" min="1" max="20" />

            <button type="submit" class="btn btn-warning">
                Купи билет – @Model.Event.Price.ToString("0.00") EUR
            </button>
        </form>
    }
}
else
{
    <div class="alert alert-warning mt-3">
        За да закупиш билет, трябва да влезеш или да се регистрираш.
        <div class="mt-2">
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-primary btn-sm">Вход</a>
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-outline-secondary btn-sm">Регистрация</a>
        </div>
    </div>
}

<a asp-action="Index">Обратно към списъка</a>
