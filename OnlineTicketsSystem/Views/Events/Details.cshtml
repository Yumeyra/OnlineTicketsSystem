@{
}
@model OnlineTicketsSystem.Models.Event

<h1>@Model.Title</h1>

<p><strong>Категория:</strong> @Model.Category.Name</p>
<p><strong>Град:</strong> @Model.City</p>
<p><strong>Място:</strong> @Model.Venue</p>
<p><strong>Дата:</strong> @Model.Date.ToShortDateString()</p>
<p><strong>Капацитет:</strong> @Model.Capacity</p>
<p><strong>Описание:</strong> @Model.Description</p>

@if (!string.IsNullOrEmpty(Model.ImageUrl))
{
    <img src="@Model.ImageUrl" alt="@Model.Title" width="300" />
}

<a asp-action="Index">Обратно към списъка</a>

