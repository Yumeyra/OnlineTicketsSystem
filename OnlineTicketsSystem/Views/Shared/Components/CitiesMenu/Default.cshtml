@{
}
@model IEnumerable<string>
@using OnlineTicketsSystem.Helpers

@foreach (var city in Model)
{
    if (CitySlugMap.TryGetSlug(city, out var slug))
    {
        <li>
            <a class="dropdown-item"
               asp-controller="Cities"
               asp-action="ByCity"
               asp-route-slug="@slug">
                @city
            </a>
        </li>
    }
}

