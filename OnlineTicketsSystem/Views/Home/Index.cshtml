@{
    ViewData["Title"] = "Начало";
}

<div class="home">

    <!-- HERO -->
    <section class="hero">
        <div class="hero__overlay"></div>

        <div class="hero__content container">
            <div class="hero__top">
                <div class="brand">
                    <span class="brand__icon">🎟️</span>
                    <span class="brand__name">Билети Онлайн</span>
                </div>

                <div class="hero__auth">
                    <a class="btn btn-ghost" asp-area="Identity" asp-page="/Account/Login">Вход</a>
                    <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register">Регистрация</a>
                </div>
            </div>

            <div class="hero__grid">
                <div class="hero__left">
                    <h1 class="hero__title">
                        Открий и резервирай<br />
                        следващото си събитие
                    </h1>

                    <p class="hero__subtitle">
                        Намерете най-добрите концерти, театрални постановки, фестивали<br />
                        и спортни събития близо до вас.
                    </p>

                    <a class="btn btn-primary btn-lg" asp-controller="Events" asp-action="Index">
                        Разгледай събития
                    </a>
                </div>
            </div>

            <!-- UPCOMING BOX -->
            <div class="upcoming">
                <div class="upcoming__header">
                    <h2 class="section-title">Предстоящи събития</h2>
                </div>

                <div class="filters">
                    <button class="filter">
                        <span>Всички категории</span>
                        <span class="chev">▾</span>
                    </button>
                    <button class="filter">
                        <span>Всички градове</span>
                        <span class="chev">▾</span>
                    </button>
                    <button class="filter">
                        <span>Предстоящи дати</span>
                        <span class="chev">▾</span>
                    </button>
                    <button class="filter">
                        <span>Ценови диапазон</span>
                        <span class="chev">▾</span>
                    </button>
                </div>

                <div class="cards">
                    <article class="event-card">
                        <div class="event-card__img" style="background-image:url('/images/events/event1.jpg');"></div>
                        <div class="event-card__body">
                            <div class="pill pill-music">♪ Музика</div>
                            <h3 class="event-card__title">Музикален фестивал</h3>

                            <div class="meta">
                                <div class="meta__row">📅 19 май, 2024</div>
                                <div class="meta__row">📍 Пловдив, Тракийска база</div>
                            </div>

                            <a class="btn btn-primary btn-sm" asp-controller="Events" asp-action="Index">Виж</a>
                        </div>
                    </article>

                    <article class="event-card">
                        <div class="event-card__img" style="background-image:url('/images/events/event2.jpg');"></div>
                        <div class="event-card__body">
                            <div class="pill pill-theatre">🎭 Театър</div>
                            <h3 class="event-card__title">Балет Лебедово</h3>

                            <div class="meta">
                                <div class="meta__row">📅 25 май, 2024</div>
                                <div class="meta__row">📍 София, Народна опера</div>
                            </div>

                            <a class="btn btn-primary btn-sm" asp-controller="Events" asp-action="Index">Виж</a>
                        </div>
                    </article>

                    <article class="event-card">
                        <div class="event-card__img" style="background-image:url('/images/events/event3.jpg');"></div>
                        <div class="event-card__body">
                            <div class="pill pill-fest">🍷 Фестивал</div>
                            <h3 class="event-card__title">Фестивална Виното</h3>

                            <div class="meta">
                                <div class="meta__row">📅 1 юли, 2024</div>
                                <div class="meta__row">📍 Варна, Френска градина</div>
                            </div>

                            <a class="btn btn-primary btn-sm" asp-controller="Events" asp-action="Index">Виж</a>
                        </div>
                    </article>

                    <article class="event-card">
                        <div class="event-card__img" style="background-image:url('/images/events/event4.jpg');"></div>
                        <div class="event-card__body">
                            <div class="pill pill-sport">⚽ Спорт</div>
                            <h3 class="event-card__title">Спортно събитие</h3>

                            <div class="meta">
                                <div class="meta__row">📅 19 юли, 2024</div>
                                <div class="meta__row">📍 Варна, Стадион</div>
                            </div>

                            <a class="btn btn-primary btn-sm" asp-controller="Events" asp-action="Index">Виж</a>
                        </div>
                    </article>
                </div>
            </div>

        </div>
    </section>

    <!-- WHY -->
    <section class="why container">
        <h2 class="script-title">Защо да избереш Билети Онлайн?</h2>

        <div class="why__grid">
            <div class="why__item">
                <div class="why__icon">🎫</div>
                <div class="why__text">
                    <h3>Голям избор</h3>
                    <p>Открий разнообразие от събития — от концерти до спорт и фестивали.</p>
                </div>
            </div>

            <div class="why__item">
                <div class="why__icon">🛡️</div>
                <div class="why__text">
                    <h3>Сигурни резервации</h3>
                    <p>Резервирай бързо и лесно — с ясни стъпки и сигурност.</p>
                </div>
            </div>

            <div class="why__item">
                <div class="why__icon">🎧</div>
                <div class="why__text">
                    <h3>Клиентска поддръжка</h3>
                    <p>Помагаме ти при въпроси — бързо и човешки.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- CITIES -->
    <section class="cities container">
        <h2 class="section-title">Популярни градове за събития</h2>

        <div class="cities__grid">
            <a class="city" asp-controller="Cities" asp-action="ByCity" asp-route-slug="sofia">
                <div class="city__img" style="background-image:url('/images/cities/sofia.jpg');"></div>
                <div class="city__name">София</div>
            </a>

            <a class="city" asp-controller="Cities" asp-action="ByCity" asp-route-slug="plovdiv">
                <div class="city__img" style="background-image:url('/images/cities/plovdiv.jpg');"></div>
                <div class="city__name">Пловдив</div>
            </a>

            <a class="city" asp-controller="Cities" asp-action="ByCity" asp-route-slug="varna">
                <div class="city__img" style="background-image:url('/images/cities/varna.jpg');"></div>
                <div class="city__name">Варна</div>
            </a>

            <a class="city" asp-controller="Cities" asp-action="ByCity" asp-route-slug="burgas">
                <div class="city__img" style="background-image:url('/images/cities/burgas.jpg');"></div>
                <div class="city__name">Бургас</div>
            </a>
        </div>
    </section>

</div>


